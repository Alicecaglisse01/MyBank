<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Accounts List</title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f0f2f5;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }
        .container {
            background-color: #ffffff;
            padding: 2rem;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            max-width: 800px;
            width: 100%;
            box-sizing: border-box;
        }
        h1 {
            color: #333;
            font-size: 2.5rem;
            text-align: center;
            margin-bottom: 1.5rem;
        }
        .user-list {
            list-style: none;
            padding: 0;
            margin: 0;
        }
        .user-item {
            background-color: #e9e9e9;
            padding: 1rem;
            border-radius: 5px;
            margin-bottom: 1rem;
            cursor: pointer;
            position: relative;
        }
        .account-list {
            list-style: none;
            padding: 0;
            margin: 0;
            display: none; /* Hide accounts list initially */
            margin-top: 1rem;
        }
        .account-item {
            display: flex;
            justify-content: space-between;
            background-color: #f9f9f9;
            padding: 1rem;
            border-radius: 5px;
            margin-bottom: 1rem;
        }
        .account-name {
            font-weight: bold;
            color: #333;
        }
        .account-amount {
            color: #4CAF50;
        }
        .arrow {
            font-size: 1.5rem;
            transition: transform 0.3s;
            position: absolute;
            right: 1rem;
            top: 1rem;
        }
        .arrow.open {
            transform: rotate(90deg);
        }
        .back-button {
            margin-top: 1rem;
            display: flex;
            justify-content: center;
        }
        .back-button button {
            padding: 0.75rem 1.5rem;
            font-size: 1rem;
            color: #ffffff;
            background-color: #4CAF50;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }
        .back-button button:hover {
            background-color: #45a049;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Liste des Comptes</h1>
        <ul class="user-list">
            <% users.forEach(function(user) { %>
                <li class="user-item" onclick="toggleAccounts('<%= user.ID %>')">
                    <div class="user-name"><%= user.NAME %></div>
                    <div class="arrow" id="arrow-<%= user.ID %>">â–¶</div>
                    <ul class="account-list" id="accounts-<%= user.ID %>">
                        <% accounts.forEach(function(account) { %>
                            <% if (account.USER_ID === user.ID) { %>
                                <li class="account-item">
                                    <div class="account-name"><%= account.NAME %></div>
                                    <div class="account-amount"><%= account.AMOUNT %>$</div>
                                </li>
                            <% } %>
                        <% }); %>
                    </ul>
                </li>
            <% }); %>
        </ul>
        <div class="back-button">
            <button onclick="window.location.href='/'">Accueil</button>
        </div>
    </div>
    
    <script>
        function toggleAccounts(userId) {
            const accountList = document.getElementById(`accounts-${userId}`);
            const arrow = document.getElementById(`arrow-${userId}`);
            if (accountList.style.display === "none" || accountList.style.display === "") {
                accountList.style.display = "block";
                arrow.classList.add("open");
            } else {
                accountList.style.display = "none";
                arrow.classList.remove("open");
            }
        }
    </script>
    
</body>
</html>
